<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<GridPane fx:id="grp_root"
          fx:controller="com.mitmax.ui.fx.Controller"
          prefHeight="750.0"
          prefWidth="750.0"
          xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets topRightBottomLeft="10"/>
    </padding>
    <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" spacing="30">
        <padding>
            <Insets topRightBottomLeft="10"/>
        </padding>
        <VBox spacing="10">
            <Text boundsType="VISUAL" text="Griddler">
                <font>
                    <Font name="Arial Black" size="47.0" />
                </font>
            </Text>
            <Text boundsType="VISUAL" text="Nonogram Solver">
                <font>
                    <Font size="26.0" />
                </font>
            </Text>
        </VBox>
        <VBox spacing="10">
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Button fx:id="btn_startReset" text="Start" HBox.hgrow="ALWAYS" maxWidth="1.7976931348623157E308"/>
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Label text="Delay:"/>
                    <TextField fx:id="txt_stepTime" text="10" prefWidth="50"/>
                    <Label text="ms"/>
                </HBox>
            </HBox>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Button fx:id="btn_beginning" text="|◀" disable="true" HBox.hgrow="ALWAYS" maxWidth="1.7976931348623157E308"/>
                <Button fx:id="btn_step" text="▶" disable="true" HBox.hgrow="ALWAYS" maxWidth="1.7976931348623157E308"/>
                <Button fx:id="btn_automatic" text="▶▶" disable="true" HBox.hgrow="ALWAYS" maxWidth="1.7976931348623157E308"/>
                <Button fx:id="btn_end" text="▶|" disable="true" HBox.hgrow="ALWAYS" maxWidth="1.7976931348623157E308"/>
            </HBox>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Button fx:id="btn_clear" text="Clear hints" HBox.hgrow="ALWAYS" maxWidth="1.7976931348623157E308"/>
                <Button fx:id="btn_changeSize" text="Change grid size" HBox.hgrow="ALWAYS" maxWidth="1.7976931348623157E308"/>
            </HBox>
        </VBox>
    </VBox>
</GridPane>
